########################################################################
cmd=`basename $0`
syntax="$cmd [-d] [-v]"
while [ $# -gt 0 ] ;do
	case $1 in 
		-d) set -x;debug=:;shift;;
		-r) action=rm;shift;;
		-v) verbose=0;shift;;
		 *) path=$1;shift;;
	esac
done
action=${action:-"echo"}
path=${path:-"./"}
sudo find $path -type l |
while read f;do 
	sudo [ -e "$f" ] ||{
		if $action "$f" 2>/dev/null;then 
			[ $action = "rm" ] && {
				[ $verbose ] && echo "$cmd: $f removed"
			}
		else
			[ $action = "rm" ] && {
				echo "$cmd: can't delete $f" >&2
			}
		fi
	}
done
