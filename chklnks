# For assistance contact fulford@fulford.net 0709 229 5385
########################################################################
cmd=`basename $0`
syntax="$cmd [-d] [-v]"
while [ $# -gt 0 ] ;do
	case $1 in 
		-d) set -x;debug=:;shift;;
		-r) action=delete;shift;;
		-v) verbose=0;shift;;
		 *) path=$1;shift;;
	esac
done
action=${action:-"echo"}
path=${path:-"./"}
for d in $path;do
	if [ $verbose ];then
		echo "$cmd: checking directory $d"
	fi
	sudo find -L $d -type l -print|
	while read f ;do
		if [ $action == "delete" ];then
			if rm $f ;then 
				if [ $verbose ];then
					echo "$cmd: $f dead link removed" >&2
				fi
			else
				echo "$cmd: could not remove $f" >&2
			fi
		else
			$action "$cmd: found dead link $f" >&2
		fi
	done
done
