########################################################################
cmd=`basename $0`
syntax="$cmd [-d] [-v]"
while [ $# -gt 0 ] ;do
	case $1 in 
		-d) set -x;debug=:;shift;;
		-r) action=delete;shift;;
		-v) verbose=0;shift;;
		 *) path=$1;shift;;
	esac
done
action=${action:-"echo"}
path=${path:-"./"}
sudo find $path -type l |
while read f;do 
	sudo [ -e "$f" ] ||{
		if [ $action = "delete" ];then 
			find $path -name $f -delete
			[ $verbose ] && echo "$cmd: $f removed"
		else
			echo "$cmd: $f dead link" >&2
		fi
	}
done
